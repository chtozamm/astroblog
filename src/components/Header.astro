---
import Navigation from "./Navigation.astro";
---

<Navigation />
<h1
  id="title"
  class="my-6 sm:my-12 select-none text-5xl font-extrabold tracking-tight sm:text-6xl text-center relative w-fit mx-auto"
>
  Astroblog <img
    src="/rocket.svg"
    class="w-12 sm:w-16 rocket absolute sm:-mr-4 -right-12 top-1.5"
    loading="eager"
    alt="ðŸš€"
  />
</h1>

<style>
  h1 {
    background: linear-gradient(-45deg, #f32a49, #ffffff, #3eaae8);
    background-size: 300%;
    background-clip: text;
    text-shadow: white 0px 0px 1px;
    transition: all 0.3s ease-out;
  }
  h1:hover {
    text-shadow:
      white 0px 0px 10px,
      #3eaae8 0px 0px 20px;
    transition: all 0.3s ease-out;
  }
  .rocket {
    animation: hover infinite linear 5s;
    rotate: -45deg;
  }

  @keyframes hover {
    0% {
      right: -3.1rem;
      top: 0.375rem;
      rotate: -45deg;
    }

    33% {
      right: -3.15rem;
      top: 0.005rem;
      rotate: -43deg;
    }
    66% {
      right: -3.2rem;
      top: 0.175rem;
      rotate: -47deg;
    }

    100% {
      right: -3.1rem;
      top: 0.375rem;
      rotate: -45deg;
    }
  }
</style>
