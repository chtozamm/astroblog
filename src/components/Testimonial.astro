---
const { name, imageUrl } = Astro.props;
---

<div
  class="flex flex-col sm:flex-row gap-4 bg-opacity-15 bg-black shadow-sm sm:p-4 rounded-lg py-4"
>
  <section class="relative aspect-square w-1/3 mx-auto sm:mx-0">
    <img
      src={imageUrl}
      alt={name}
      loading="eager"
      class={`absolute rounded-full overflow-hidden shadow-sm shadow-amber-200`}
    />
  </section>
  <section class="flex flex-col justify-center gap-2 sm:text-left text-center">
    <p class={`leading-7 sm:text-lg mx-auto sm:mx-0`}><b>{name}:</b></p>
    <p
      class={`sm:border-l-2 sm:pl-4 px-2 sm:leading-7 text-balance leading-6 text-sm sm:text-base`}
    >
      <slot />
    </p>
  </section>
</div>
